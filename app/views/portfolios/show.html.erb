<div class="container portfolio-container">
	<div class="row">
		<div class="col-md-7">
			<%=image_tag portfolio_img(@portfolio.main_image,"main"),width:"100%"%>
		</div>
		<div class="col-md-5">
				<h1><%=@portfolio.title%></h1>
				<h3><%=@portfolio.subtitle%></h3>

				<p><%=raw @portfolio.body%></p>
				<h3>Technologies Used:</h3>
				<%@portfolio.technologies.each do |f|%>
				<p><%=f.name%></p>
				<%end%>
				<%if logged_in?(:site_admin)%>
					<div>
						<%= link_to "Edit",edit_portfolio_path(@portfolio),class:"btn btn-warning"%>
					</div>
				<%end%>
		</div>
		
	</div>
</div>