<div class="container portfolio-container">
  
  <%= form_with(model: data, local: true) do |form|%>
    <% if data.errors.any? %>
      <% data.errors.full_messages.each do |error|%>
          <%= js add_gritter( error.to_s,title:"Error", sticky:false,time:2000) %>
      <%end%>
  <% end %>

    <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, id: :blog_title,class:"form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :subtitle %>
            <%= form.text_field :subtitle, id: :blog_title,class:"form-control" %>
          </div>
          <div>
            <label class="btn btn-success">
              Upload Main Image<%= form.file_field :main_image,style:"display: none;"%>
            </label>
            
          </div>
          <div>
            <label class="btn btn-success">
              Upload Thumb Image<%= form.file_field :thumb_image,style:"display: none;"%>
            </label>
            
          </div>
        </div>
        
        <div class="col-md-6">
          <%=form.fields_for :technologies do|tech|%>
            <%= render 'technology_fields', f: tech%>
          <%end%>
        <div>
          <%=link_to_add_association 'Add Technology',form,:technologies%>
        </div>
        </div>

        

        <div class="col-md-12">
          <div class="form-group">
            <%= form.label :body %>
            <%= form.cktext_area :body, id: :blog_body %>
          </div>
          <div class="form-group">
            <%= form.submit class:"btn btn-primary btn-block" %>
          </div>
        </div>   
    </div>    
  <% end %>
</div>