<div class="container portfolio-container">
  <%= form_for data do |form| %>
    <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <%= form.label :title %>
            <%= form.text_field :title, id: :blog_title,class:"form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :subtitle %>
            <%= form.text_field :subtitle, id: :blog_title,class:"form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :main_image %>
            <%= form.file_field :main_image, id: :blog_title,class:"form-control" %>
          </div>
          <div class="form-group">
            <%= form.label :thumb_image %>
            <%= form.file_field :thumb_image, id: :blog_title,class:"form-control" %>
          </div>
        </div>
        
        <div class="col-md-6">
          <%=form.fields_for :technologies do|tech|%>
          <div class="form-group">
            <%=tech.label :technologies%>
            <%=tech.text_field :name,class:"form-control"%>
          </div>
          <%end%>
        </div>
        <div class="col-md-12">
          <div class="form-group">
            <%= form.label :body %>
            <%= form.cktext_area :body, id: :blog_body %>
          </div>
          <div class="form-group">
            <%= form.submit class:"btn btn-primary btn-block" %>
          </div>
        </div>
      
        
    </div>    
  <% end %>
</div>