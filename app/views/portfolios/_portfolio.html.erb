
<div class="col-md-4">
  <div class="card mb-4 box-shadow">
    <%=image_tag portfolio.thumb_image||"https://briggo.com/wp-content/uploads/2013/03/image-alignment-300x200-300x200.jpg",class:"card-img-top"%>
    <div class="card-body">
      <p class="card-title"><%=link_to portfolio.title,show_portfolio_path(portfolio.id)%></p>
      <p class="card-text"><%=portfolio.subtitle%></p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
    	     <%= button_to "Edit",edit_portfolio_path(portfolio),method:"get",class:"btn btn-sm btn-outline-secondary" if logged_in?(:site_admin)%>
           <%= button_to "Delete",portfolio_path(portfolio),method:"delete",data:{confirm:"Are you Sure?"},class:"btn btn-sm btn-outline-secondary" if logged_in?(:site_admin)%>
        </div>
        <small class="text-muted"><%=time_ago_in_words(portfolio.created_at)%></small>
      </div>
    </div>
  </div>
</div>