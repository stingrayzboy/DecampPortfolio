<%= form_for @portfolio do |form| %>
  

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title %>
  </div>
  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :blog_title %>
  </div>
  <div class="field">
    <%= form.label :main_image %>
    <%= form.text_field :main_image, id: :blog_title %>
  </div>
  <div class="field">
    <%= form.label :thumb_image %>
    <%= form.text_field :thumb_image, id: :blog_title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body %>
  </div>
  <ul>
    <%=form.fields_for :technologies do|tech|%>
    <li><%=tech.label :name%></li>
    <li><%=tech.text_field :name%></li>
    
    <%end%>
  </ul>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
