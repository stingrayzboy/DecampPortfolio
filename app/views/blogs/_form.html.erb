<%= form_with(model: blog, local: true) do |form| %>
  <% if blog.errors.any? %>
    <% blog.errors.full_messages.each do |error|%>
        <%= js add_gritter( error.to_s,title:"Error", sticky:false,time:2000) %>
    <%end%>
    
  <% end %>


<div class="card">
  <div class="card-header">
    <div class="form-group">
      <%= form.text_field :title, id: :blog_title,class:"form-control",placeholder: :title %>
    </div>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= form.label :body %></h5>
     <div class="form-group">
      
      <%= form.cktext_area :body, id: :blog_body,class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :topic_id %>
      <%= form.number_field :topic_id, id: :blog_body,class:"form-control" %>
    </div>
    <div class="form-group">
      <%= form.submit class:"btn btn-success" %>
    </div>
  </div>

</div>
  
<% end %>
