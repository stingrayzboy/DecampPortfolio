<div class="col-md-12">
  <div class="card flex-md-row mb-4 box-shadow ">
    <%cache do%>
    <div class="card-body d-flex flex-column align-items-start">
      <strong class="d-inline-block mb-2 text-primary"><%= link_to blog.topic.title,blog_topic_path(blog.topic.id) %></strong>
     <%end%>
      <h3 class="mb-0">
      	<%= link_to blog.title, blog, class:"text-dark" %>
        <!-- <a class="text-dark" href="#"><%= blog.title %></a> -->
      </h3>
      <div class="mb-1 text-muted"><%= time_ago_in_words(blog.created_at)+" ago"%></div>
      <%if logged_in?(:site_admin)%>
        <p class="card-text mb-auto"><%= raw blog.body[0..70]+"..."%></p>
      <%else%>
        <p class="card-text mb-auto"><%= raw blog.body[0..1000]+"..."%></p>
      <%end%>

      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">          
          <%= link_to fa_icon("pencil"), edit_blog_path(blog),class:"breadcrumb-item" if logged_in?(:site_admin)%>
          <%= link_to fa_icon("trash"), blog, method: :delete, data: { confirm: 'Are you sure?' },class:"breadcrumb-item" if logged_in?(:site_admin) %>
        </ol>
      </nav>
    </div>
      <%if blog.status=="draft"%>
        <%button="btn btn-danger"%>
      <%else%>
        <%button="btn btn-success"%>
      <%end%>
    	<%= button_to blog.status.to_s.capitalize,toggle_status_blog_path(blog),class:button if logged_in?(:site_admin) %>
  </div>
</div>