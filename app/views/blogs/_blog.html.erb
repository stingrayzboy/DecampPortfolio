<div class="col-md-6">
  <div class="card flex-md-row mb-4 box-shadow h-md-250">
    <div class="card-body d-flex flex-column align-items-start">
      <strong class="d-inline-block mb-2 text-primary"><%= blog.topic.title %></strong>
      <h3 class="mb-0">
      	<%= link_to blog.title, blog, class:"text-dark" %>
        <!-- <a class="text-dark" href="#"><%= blog.title %></a> -->
      </h3>
      <div class="mb-1 text-muted"><%= time_ago_in_words(blog.created_at)+" ago"%></div>
      <!-- <p class="card-text mb-auto">This is a wider card with supporting text below as a natural lead-in to additional content.</p> -->
      
      <%= link_to 'Edit', edit_blog_path(blog) if logged_in?(:site_admin)%>
      <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
      
    </div>
    <%if blog.status=="draft"%>
    <%button="btn btn-danger"%>
    <%else%>
    <%button="btn btn-success"%>
    <%end%>
    	<%= button_to blog.status.to_s.capitalize,toggle_status_blog_path(blog),class:button if logged_in?(:site_admin) %>
  </div>
</div>