<main role="main" class="container">
      <div class="row">
        <div class="col-md-8 blog-main">
          <h3 class="pb-3 mb-4 font-italic border-bottom">
            <%=@blog.topic.title%>
          </h3>

          <div class="blog-post">
            <h2 class="blog-post-title"><%= @blog.title %></h2>
            <p class="blog-post-meta"><%= time_ago_in_words @blog.created_at %> ago</p>
            <%= @blog.body.html_safe %>
            
          </div><!-- /.blog-post -->

          <nav class="blog-pagination">
            <%= link_to 'Back', blogs_path,class:"btn btn-outline-primary" %>
            <%= link_to 'Edit', edit_blog_path(@blog),class:"btn btn-outline-secondary" if logged_in?(:site_admin) %>
          </nav>
          <!-- Start of comment form -->
            <%unless current_user.is_a?(GuestUser) %>
              <%=form_for @comment,url:'#' do |f|%>
                <div class="form-group">
                  <%=f.label :content%>
                  <%=f.text_area :content,class:"form-control"%>
                </div>
                <%=f.submit "Post Comment",class:"btn btn-primary"%>
              <%end%>
            <%end%>
          <!-- End of comment form -->

          <!-- Start of comments -->
          <%=render @blog.comments%>
          <!-- End of comments -->
        </div><!-- /.blog-main -->

        <%= render "shared/blog_sidebar"%>
      </div><!-- /.row -->

    </main>