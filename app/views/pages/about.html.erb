<main role="main" class="inner cover">
	<div class="app-about-container">    
	    <div class="card">
		    <div class="row">  
		    	<h1 class="cover-heading">“I don’t have dreams, I have goals.”</h1>  
			    <div class="col-md-6">
			    	
			    	<div class="covered">&nbsp;</div>
			    	<div class="collapse" id="skill_history">
			    		<%@skills.each do |skill|%>
			    			<h4><%=skill.title%></h4>
				    		<div class="card-block">
				    			<div class="progress">
				    				<div 
				    					class="progress-bar progress-bar-striped bg-warning"
				    					role="progressbar"
				    					aria-valuenow="<%=skill.percent_utilized%>"
				    					aria-valuemax="100"
				    					style="width: <%=skill.percent_utilized%>%"
				    				></div>
				    			</div>
				    		</div>
			    		<%end%>
			    	</div>
			    </div>
			    <div class="col-md-6">   
			        
			        <p class="lead">
			        	<%=render "shared/about"%>
			        </p>
			        <p>
			        	<button
			        		class="btn btn-primary"
			        		type="button"
			        		data-toggle="collapse"
			        		data-target="#job_history"
			        		aria-expanded="false"
			        		aria-controler="job_history"
			        	>Jobs</button>
			        	<button
			        		class="btn btn-warning"
			        		type="button"
			        		data-toggle="collapse"
			        		data-target="#school_history"
			        		aria-expanded="false"
			        		aria-controler="school_history"
			        	>Education</button>
			        	<button
			        		class="btn btn-danger"
			        		type="button"
			        		data-toggle="collapse"
			        		data-target="#skill_history"
			        		aria-expanded="false"
			        		aria-controler="skill_history"
			        	>Skills</button>
			        </p>
			       
				    <div class="collapse" id="job_history">
				    	<div class="card card-block">Tata Consultancy Services</div>
				    </div>
				    <div class="collapse" id="school_history">
				    	<div class="card card-block">University of Mumbai</div>
				    </div>
			    </div> 
			</div>
		</div>
	</div>
    	
</main>