<div class="comment-card">
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-md-2">
          
            <%=gravatar_helper comment.user%>
          
        </div>
        <div class="col-md-10">
          
          <br>
          <%=comment.content%>
          
          <div class="comment-details">
            Comment Posted by <strong><%=comment.user.first_name%></strong> <%=time_ago_in_words comment.created_at%> ago
          </div>
        </div>
      </div>
    </div>
  </div>
</div>